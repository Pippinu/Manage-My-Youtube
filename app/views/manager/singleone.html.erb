  <section style="background-color: white;">
    <div class="container py-5">
      <%def withoutLast5(user)
          if @cliente.avatar_url
            return @cliente.avatar_url[0..-6]+"s580-c"
          else 
            return "https://blogtimenow.com/wp-content/uploads/2014/06/hide-facebook-profile-picture-notification.jpg"
          end
        end    
      %>

      <div class="row">

        <div class="col-lg-4">
          <div class="card mb-4">
            <div class="card-body text-center">
                <% if !@cliente.avatar.attached?%>
                <img src="<%=withoutLast5(@cliente.avatar_url)%>" alt="avatar"
                class="rounded-circle" style="width: 150px;">
                <% else %>
                <%= image_tag @cliente.avatar,class:"rounded-circle",height:150,width:150 %>
                <%end%>
                <h5 class="my-3 text-capitalize"><%= @cliente.full_name %></h5>
                <p class="text-muted mb-1 text-capitalize"><%= @cliente.ruolo %></p>

                <% @affiliazione=Affiliation.where(cliente: @cliente.id.to_s).where(manager: current_user.id.to_s).where(status: "accepted").take%>
                <a href="/manager/aziende?id=<%=@cliente.id%>" class="btn btn-outline-danger mt-2" style="margin-left:auto">Affilia ad un'azienda</a>
            </div>
          </div>
        </div>

        <div class="col-lg-8">

            <div class="card mb-4">
            <div class="card-body">

                <div class="row">
                <div class="col-sm-3">
                    <p class="mb-0">Nome</p>
                </div>
                <div class="col-sm-9">
                    <p class="text-muted mb-0 text-capitalize"><%= @cliente.full_name %></p>
                </div>
                </div>

                <hr>

                <div class="row">
                <div class="col-sm-3">
                    <p class="mb-0">Email</p>
                </div>
                <div class="col-sm-9">
                    <p class="text-muted mb-0"><%= @cliente.email %></p>
                </div>
                </div>

            </div>
            </div>

            <!--Youtube e Calendar Functions-->
            <div class="d-flex flex-row mb-4">
            
            <div class="d-flex flex-column align-items-center col-6" style="border-right: 1px solid grey;">
                <h4>Funzioni Youtube</h4>
                <div class="d-flex flex-column">
                    <!-- RIMOSSA: Non credo sia permessa da YT per privacy
                    <hr>
                    <div>
                        <%= link_to list_subs_path(userID: @cliente.id.to_i) do %>
                            <li class="btn btn-success mt-1" style="width:100%">Visualizza Iscritti</li>
                        <% end %>
                    </div>
                    -->
                    <hr>
                    <div>
                        <a href="/lista_video_channelid?id=<%=@cliente.channelID%>">
                            <li class="btn btn-success mt-1" style="width:100%">Lista Video Utente</li>
                        </a>
                    </div>
                </div>
            </div>

            <div class="d-flex flex-column align-items-center col-6">
                <h4>Funzioni Calendar</h4>
                
                <div class="d-flex flex-column">
                    <hr>
                    <ul class="list-group">

                        <%if !Calendar.where(userId: @cliente.id.to_s).where(managerId: current_user.id.to_s).take%>
                            <%= link_to calendar_createCalendar_path(userID: @cliente.id.to_i) do %>
                                <li class="btn btn-success mt-1" style="width:100%">Crea Calendario</li>
                            <% end %>
                        <%else%>
                        <div class="d-flex flex-row gap-3 align-items-center">
                            <div>
                                <%= link_to 'http://calendar.google.com/', target: :_blank do %>
                                    <li class="btn btn-warning mt-1" style="width:100%">Visualizza Calendario</li>
                                <% end %>
                                <%= link_to calendar_deleteCalendar_path(userID: @cliente.id) do %>
                                    <li class="btn btn-danger mt-1" style="width:100%">Elimina Calendario</li>
                                <% end %>
                                <br>
                                <hr>
                                
                                <%= link_to calendar_createEvent_path(userID: @cliente.id) do %>
                                    <li class="btn btnevent mt-1" style="width:100%; background-color: rgb(169, 249, 255);">Crea Evento</li>
                                <% end %>
                                    <a href="/manager/events?cliente=<%=@cliente.id.to_s%>" class="btn btnevent mt-1" style="width:100%;  background-color: rgb(98, 245, 255)">Visualizza Eventi</a>
                                <!--
                                <%= link_to calendar_listEvent_path(userID: @cliente.id) do %>
                                    <li class="btn btnevent mt-1" style="width:100%;  background-color: rgb(98, 245, 255)";>Modifica Evento</li>
                                <% end %>
                                <%= link_to calendar_deleteEvent_path(userID: @cliente.id) do %>
                                    <li class="btn btnevent mt-1" style="width:100%; background-color:rgb(4, 238, 255);">Elimina Evento</li>
                                <% end %>
                                -->
                            </div>
                        </div>
                        <%end%>
                    </ul>
                </div>
            </div>

            </div>

        </div>

      </div>
    </div>
  </section>

