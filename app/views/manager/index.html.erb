<section class="header3 cid-rsq6I1iuyl">
    <%def withoutLast5(userAvatarUrl)
        if userAvatarUrl
          return userAvatarUrl[0..-6]+"s580-c"
        else 
          return "https://blogtimenow.com/wp-content/uploads/2014/06/hide-facebook-profile-picture-notification.jpg"
        end
      end    
    %>

    <div class="container d-flex flex-row" style="min-height:340px">
        <div class="d-flex flex-column col-12">
            <h2 class="py-3">Lista Clienti</h2>

            <!--DA IMPLEMENTARE ! -->
            
            <div class="d-flex flex-column gap-2">
                <% @users.each do |user| %>
                    <% @affiliazione=Affiliation.where(cliente: user.id.to_s).where(manager: current_user.id.to_s).where(status: "accepted").take%>
                    <%if user.ruolo=="cliente" && @affiliazione%>
                    
                    <!--Implementare qui link per singolo cliente-->
                        <div onclick="location.href='/manager/singleone?cliente=<%=user.id%>'" style="cursor:pointer" class="d-flex flex-row gap-5 align-items-center managerline border p-4 px-5 text-black">
                            <div>
                                <% if user.avatar.attached?%>
                                    <%= image_tag user.avatar,class:"rounded-circle",height:100,width:100 %>
                                <% else %>
                                    <img src="<%=withoutLast5(user.avatar_url)%>" alt="avatar" class="rounded-circle" style="width: 100px;">
                                <%end%>
                            </div>
                                
                            <div>
                                <p class="font-weight-bold" style="font-weight: bold"><%= user.full_name %></p>
                            </div>

                            <div>
                                <p><%= user.email %></p>
                            </div>


                            <br>
                        </div>

                    <%end%>

                <% end %>

            </div>
            
        </div>
    </div>

</section>


