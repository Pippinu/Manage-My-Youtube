<div class="spacer py-5"></div>

<div class="container d-flex flex-row">
    <div class="d-flex flex-column col-12">
        <h2 class="pb-5">Statistiche video</h2>
            <div class="d-flex flex-row">
                    <div id="videotemplatecontainer">
                        <a id="youtubelogolink" href="https://www.youtube.com/watch?v=<%=@video_id%>" target="_blank">
                            <img id="videotemplate" src="<%=@videostat.snippet.thumbnails.high.url%>" alt="avatar" style="height: 180px;">
                        </a>
                    </div>
                    
                        
                    <div class="px-4 p-3">
                        <p style="font-weight: bold"> <%= @videostat.snippet.title%></p>
                        <p> <%= @videostat.snippet.description%></p>
                    </div>
            </div>

            <div class="statistics d-flex flex-row gap-5 py-5 p-3">
                <p style="font-weight: bold"><i class="fa-solid fa-thumbs-up fa-2x" style="color:blue"></i>  <%=@videostat.statistics.like_count%></p>
                <p style="font-weight: bold"><i class="fa-solid fa-thumbs-down fa-2x" style="color:red"></i>  <%=@videostat.statistics.dislike_count%></p> 
                <p style="font-weight: bold"><i class="fa-regular fa-eye fa-2x"></i>   <%=@videostat.statistics.view_count%></p>
                <p style="font-weight: bold"><i class="fa-regular fa-comment fa-2x"></i>  <%=@videostat.statistics.comment_count%></p>
            </div>               
    </div>
</div>

