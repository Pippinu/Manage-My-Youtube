                            <%= link_to 'http://calendar.google.com/', target: :_blank do %>
                                <li class="btn btn-warning mt-1" style="width:100%">Visualizza Calendario</li>
                            <% end %>
                            <br>
                            <hr>
                            
                            <%= link_to calendar_createEvent_path(managerID: managerID) do %>
