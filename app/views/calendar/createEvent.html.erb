<%# DA PROVARE CON method: :post %>
<div class="container py-5">
    <%= form_with model: @event, url: "createEventConfirm", method: :get do |form| %>   
        <div class = "container p-5">
            <div class="row pb-2">
                <div class="col">
                    <%= form.label :summary, "Titolo:", class: "form-label mb-0" %>
                    <%= form.text_field :summary, class: "form-control" %>
                </div>
                <div class="col">
                    <%= form.label :description, "Descrizione:", class: "form-label" %>
                    <%= form.text_area :description, class: "form-control", size: "70x2" %>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <%= form.label :date_attributes, "Data inizio:" , class: "form-label mb-0" %>
                    <%= form.date_field :date_attribute_start, class: "form-control" %>
                </div>

                <div class="col">
                    <%= form.label :date_attributes, "Data fine:" , class: "form-label mb-0" %>
                    <%= form.date_field :date_attribute_end, class: "form-control" %>
                </div>
            </div>

            <div class="row">
                <div class="col-4">
                    <%= form.label :meetConference, "Creare conferenza meet?" %>
                </div>
                <div class="col-1">
                    <%= form.check_box :meetConference %>
                </div>
                <div class="col-7"></div>
            </div>
            

            <div class="row">
                <div class="col-5"></div>

                <div class="col-2">
                    <%= form.submit "Invia" %>
                </div>
                <div class="col-5"></div>
            </div>  

            <%# Passa ID del cliente corrente %>
            <%= form.hidden_field :userID, value: @userID %>
        </div>
    <% end %>
</div>
