<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

    <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
</head>

<%= form_for @event do |form| %>   
    <div class = "container p-5">
        <div class="row pb-2">
            <div class="col-1">
                <%= form.label :id, "ID:", class: "form-label mb-0" %>
                <%= form.text_field :id, class: "form-control", :disabled => true%>
            </div>
            <div class="col">
                <%= form.label :summary, "Titolo:", class: "form-label mb-0" %>
                <%= form.text_field :summary, class: "form-control" %>
            </div>
            <div class="col">
                <%= form.label :description, "Descrizione:", class: "form-label" %>
                <%= form.text_area :description, class: "form-control", size: "70x2" %>
            </div>
            
        </div>
        <div class = "row">
            <div class="col">
                <%= form.label :meetCode, "Codice Meet (Modificare con cautela):", class: "form-label mb-0" %>
                <%= form.text_field :meetCode, class: "form-control" %>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <%= form.label :start, "Data inizio:" , class: "form-label mb-0" %>
                <%= form.date_field :start, class: "form-control" %>
            </div>

            <div class="col">
                <%= form.label :end, "Data fine:" , class: "form-label mb-0" %>
                <%= form.date_field :end, class: "form-control" %>
            </div>
        </div>

        <div class="row">
            <div class="col-5"></div>

            <div class="col-2">
                <%= form.submit "Invia" %>
            </div>
            <div class="col-5"></div>
        </div>  

        <%# Passa ID del cliente corrente %>
        <%= form.hidden_field :eventID, value: @event.id %>
    </div>

    
<% end %>
